<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".COrdenes">

    <Spinner
        android:id="@+id/sp_restaurantes"
        android:layout_width="254dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_seleccionar_restaurante"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_seleccionar_restaurante"
        app:layout_constraintTop_toBottomOf="@+id/tv_seleccionar_restaurante" />

    <TextView
        android:id="@+id/tv_seleccionar_restaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Restaurantes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_seleccionar_restaurante3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Agregar nuevo tipo comida"
        app:layout_constraintEnd_toEndOf="@+id/sp_restaurantes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sp_restaurantes"
        app:layout_constraintTop_toBottomOf="@+id/sp_restaurantes" />

    <TextView
        android:id="@+id/tv_arreglo_tipo_comida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TEXTO DE TIPOS DE COMIDA"
        app:layout_constraintEnd_toEndOf="@+id/et_tipo_comida"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="@+id/et_tipo_comida"
        app:layout_constraintTop_toBottomOf="@+id/et_tipo_comida" />

    <TextView
        android:id="@+id/tv_seleccionar_restaurante2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Review"
        app:layout_constraintEnd_toEndOf="@+id/et_tipo_comida"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_tipo_comida"
        app:layout_constraintTop_toBottomOf="@+id/et_tipo_comida" />

    <EditText
        android:id="@+id/et_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/tv_seleccionar_restaurante2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_seleccionar_restaurante2"
        app:layout_constraintTop_toBottomOf="@+id/tv_seleccionar_restaurante2" />

    <EditText
        android:id="@+id/et_tipo_comida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/tv_seleccionar_restaurante3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_seleccionar_restaurante3"
        app:layout_constraintTop_toBottomOf="@+id/tv_seleccionar_restaurante3" />

    <Button
        android:id="@+id/btn_anadir_tipo_comida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="@+id/et_tipo_comida"
        app:layout_constraintStart_toEndOf="@+id/et_tipo_comida"
        app:layout_constraintTop_toTopOf="@+id/et_tipo_comida"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_crear_orden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/et_review"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_review"
        app:layout_constraintTop_toBottomOf="@+id/et_review" />
</androidx.constraintlayout.widget.ConstraintLayout>